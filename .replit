modules = ["python-3.11", "postgresql-16", "nodejs-20"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "NODE_ENV=production npx vite build && node src/server/server.js"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Database Migrations"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx drizzle-kit generate:pg && tsx src/server/db/migrate.ts"

[[workflows.workflow]]
name = "Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production npx vite build"

[[workflows.workflow]]
name = "Project"
author = "agent"
mode = "parallel"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Seed Test Data"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Database Migrations"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build All"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build and Start"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production Build"

[[workflows.workflow]]
name = "Start Frontend"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development vite --port 3003 --host"
waitForPort = 3003

[[workflows.workflow]]
name = "Seed Test Data"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development tsx src/server/db/seed.ts"

[[workflows.workflow]]
name = "Build All"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    echo \"Starting build process...\" &&
    rm -rf dist &&
    echo \"Creating directories...\" &&
    mkdir -p dist/server &&
    echo \"Building server files...\" &&
    NODE_ENV=production npx tsc --project tsconfig.server.json &&
    echo \"Server build complete. Contents of dist/server:\" &&
    ls -la dist/server &&
    echo \"Building client files...\" &&
    NODE_ENV=production npx vite build &&
    echo \"Build complete. Final directory structure:\" &&
    ls -R dist/
    """

[[workflows.workflow]]
name = "Start Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production npx tsx src/server/server.ts"
waitForPort = 5000

[[workflows.workflow]]
name = "Build and Start"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    cd /home/runner/workspace &&
    echo \"Cleaning dist directory...\" &&
    rm -rf dist &&
    echo \"Creating server directory...\" &&
    mkdir -p dist/server &&
    echo \"Building server with TypeScript...\" &&
    NODE_ENV=production NODE_PATH=./src/server npx tsc --project tsconfig.server.json &&
    echo \"Building client with Vite...\" &&
    NODE_ENV=production npx vite build &&
    echo \"Starting production server...\" &&
    cd /home/runner/workspace &&
    NODE_ENV=production NODE_DEBUG=module node --enable-source-maps dist/server/server.js
    """
waitForPort = 5000

[[workflows.workflow]]
name = "Production Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    echo \"Starting production build...\" &&
    rm -rf dist &&
    mkdir -p dist/server &&
    NODE_ENV=production npx tsc --project tsconfig.server.json &&
    NODE_ENV=production npx vite build &&
    NODE_ENV=production PORT=5000 NODE_PATH=./dist/server tsx src/server/server.ts
    """
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 3003
externalPort = 3003

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 3000

[auth]
pageEnabled = false
buttonEnabled = false
