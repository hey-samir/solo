modules = ["python-3.11", "postgresql-16", "nodejs-20"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "NODE_ENV=production npx vite build && node src/server/server.js"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Database Migrations"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx drizzle-kit generate:pg && tsx src/server/db/migrate.ts"

[[workflows.workflow]]
name = "Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

set -e

echo \"Starting build process...\"

# Clean and prepare directories
echo \"Cleaning previous build...\"
rm -rf dist
mkdir -p dist/server

# Compile TypeScript server files with verbose output
echo \"Compiling server TypeScript files...\"
NODE_ENV=production npx tsc --project tsconfig.server.json --listFiles || {
    echo \"TypeScript compilation failed. Checking configuration...\"
    cat tsconfig.server.json
    exit 1
}

# Verify server compilation
echo \"Verifying server compilation...\"
if [ ! -f \"dist/server/server.js\" ]; then
    echo \"server.js was not generated. Directory contents:\"
    find dist -type f
    echo \"TypeScript output:\"
    NODE_ENV=production npx tsc --project tsconfig.server.json --listEmittedFiles
    exit 1
fi

# Copy server files
echo \"Copying server files...\"
for dir in routes middleware db types deployment; do
    if [ -d \"src/server/$dir\" ]; then
        echo \"Copying $dir...\"
        cp -r \"src/server/$dir\" \"dist/server/\"
    fi
done

# Build client
echo \"Building client...\"
NODE_ENV=production npx vite build

# Verify entire build
echo \"Verifying complete build...\"
if [ ! -f \"dist/index.html\" ]; then
    echo \"Client build failed - missing index.html\"
    exit 1
fi

if [ ! -f \"dist/server/server.js\" ]; then
    echo \"Server build failed - missing server.js\"
    exit 1
fi

echo \"Final build structure:\"
ls -R dist/

echo \"Build completed successfully\"
"""

