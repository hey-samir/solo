[[workflows.workflow]]
name = "Production Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

set -e

echo \"Starting production server...\"

# Set environment variables
export NODE_ENV=production
export PORT=80
export HOST=0.0.0.0

# Ensure we're in the right directory
cd dist/server || {
    echo \"Failed to find server directory\"
    exit 1
}

# Start the server
echo \"Starting server from $(pwd)\"
node server.js
"""
waitForPort = 80

[[workflows.workflow]]
name = "Build Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

set -e
echo \"Building server...\"

# Ensure dist/server directory exists
mkdir -p dist/server

# Build TypeScript files with explicit paths
NODE_ENV=production npx tsc --project tsconfig.server.json --outDir dist/server --rootDir src/server

# Verify the build output
if [ ! -f \"dist/server/server.js\" ]; then
    echo \"TypeScript compilation failed to generate server.js\"
    echo \"Contents of dist/server:\"
    ls -la dist/server
    exit 1
fi

# Copy necessary files
echo \"Copying additional files...\"
cp -r src/server/{routes,middleware,db,types} dist/server/
cp package.json dist/server/

# Install production dependencies
cd dist/server
npm install --production

echo \"Server build completed successfully\"
"""

[[workflows.workflow]]
name = "Full Production Deploy"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

set -e

# Build both client and server
NODE_ENV=production npx vite build
NODE_ENV=production npx tsc --project tsconfig.server.json

# Copy necessary files
cp -r src/server/routes src/server/middleware src/server/db src/server/types src/server/deployment dist/server/

# Start the server
cd dist/server && NODE_ENV=production PORT=80 node server.js
"""
waitForPort = 80

