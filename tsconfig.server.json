{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": ["node"],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/server/*"]
    }
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules", "dist", "src/client", "**/*.test.ts"]
}