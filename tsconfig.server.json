{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist/server",
    "noEmit": false,
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "target": "ES2020",
    "lib": ["ES2020"]
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules"]
}
